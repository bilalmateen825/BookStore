@page
@model BookStore.Pages.Books.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-page="./Index" asp-route-sortAttribute="@ENBookAttributes.Title">
                    @Html.DisplayNameFor(model => model.BookEntity[0].Title)
                </a>
            </th>
            <th>
                <a asp-page="./Index" asp-route-sortAttribute="@ENBookAttributes.Author">
                    @Html.DisplayNameFor(model => model.BookEntity[0].AuthorName)
                </a>                
            </th>
            <th>
                <a asp-page="./Index" asp-route-sortAttribute="@ENBookAttributes.Category">
                    @Html.DisplayNameFor(model => model.BookEntity[0].BookCategory.CategoryName)
                </a>                
            </th>
            <th>
                <a asp-page="./Index" asp-route-sortAttribute="@ENBookAttributes.ReleaseDate">
                    @Html.DisplayNameFor(model => model.BookEntity[0].ReleaseDate)
                </a>               
            </th>
            <th>
                <a asp-page="./Index" asp-route-sortAttribute="@ENBookAttributes.Rating">
                    @Html.DisplayNameFor(model => model.BookEntity[0].Rating)
                </a>                
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.BookEntity)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AuthorName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BookCategory.CategoryName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReleaseDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Rating)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.BookId">
                        <img src="~/img/Edit.png" width="22px" height="22px" />
                    </a>
                    <a asp-page="./Details" asp-route-id="@item.BookId">
                        <img src="~/img/Details.png" width="22px" height="22px" />
                    </a>
                    <a asp-page="./Delete" asp-route-id="@item.BookId">
                        <img src="~/img/Remove.png" width="22px" height="22px" />
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
